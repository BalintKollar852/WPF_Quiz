<Page x:Class="WPF_Quiz.Results"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Quiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="Results">

    <Grid Background="#040c0e">
        <StackPanel>
            <Label x:Name="Current_resultslabel" Content="A játék eredménye: " Foreground="White"></Label>
            <TextBox x:Name="Current_resultstext" Height="115" IsReadOnly="True" AcceptsReturn="True"  VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" ></TextBox>
            <Label x:Name="Previous_resultslabel" Content="eddigi eredményei: " Foreground="White"></Label>
            <TextBox x:Name="Previous_resultstext" Height="65" IsReadOnly="True"></TextBox>
            <Button Content="Új játék" HorizontalAlignment="Center" Margin="0,50,0,0" Width="200" Height="40" Foreground="Black" FontFamily="Arial Black" FontSize="18" Click="RestartGame_Click"/>
        </StackPanel>
        <Frame x:Name="MainFrame"/>
    </Grid>
</Page>
